<%- include ('partials/_header') %> 
<div class="container">
    <!-- Formulario para añadir tiendas-->
    <br/>
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                     <form action="/addcentros" method="GET">
                        <h3> <center> Añadir Centros</center></h3>
                        <br/>
                         <div class="form-group">
                             <input type='text' name="Nombre" placeholder="Inserta un Nombre" 
                             class="form-control">
                         </div>
                         <div class="form-group">
                            <input type='Number' name="Codigo" placeholder="Inserte un Código" 
                            class="form-control">
                        </div>
                        <div class="form-group">
                            <input type='text' name="Calle" placeholder="Inserte una Calle" 
                            class="form-control">
                        </div>
                        <div class="form-group">
                            <input type='Number' name="Numero" placeholder="Inserte un numero" 
                            class="form-control">
                        </div>
                        <div class="form-group">
                            <input type='Number' name="CodigoPostal" placeholder="Inserte un Codigo Postal" 
                            class="form-control">
                        </div>
                        <div class="form-group">
                            <input type='text' name="Municipio" placeholder="Inserte un municipio" 
                            class="form-control">
                        </div>
                        <div class="form-group">
                            <input type='number' step="any" name="lat" placeholder="Inserta primera coordenada (W)" 
                            class="form-control">
                        </div>
                        <div class="form-group">
                            <input type='number' step="any" name="lon"  placeholder="Inserta segunda coordenada (N)" 
                            class="form-control">
                        </div> 
                         <button type="submit" class="btn btn-primary btn-block">Add</button>
                     </form>
                </div>
            </div>
        </div>
        </div>
        <hr style="color: black;" noshade="noshade"/>
        <br/>
        <br/>
    <!-- Lista -->
            <div class="input-group md-form form-sm form-2 pl-0">
                <h4> &nbsp;&nbsp; Buscador: </h4>
                <input class="form-control my-0 py-1 amber-border" type="text" placeholder="Search"  id="tableSearch">
            </div>
    <div class="col-nd-7">
            <table class="table table-bordered table-hover" style="background-color: white">
                <thead>
                    <br/>
                    <tr>
                        <th>Nombre</th>
                        <th>Codigo</th>
                        <th>Direccion</th>
                        
                    </tr>
                </thead>
                <tbody id="myTable">
                    <% for(var i = 0; i < result.length; i++) { %>
                    <tr>
                        <!-- <td><%= i + 1 %></td> -->
                        <td> <%= result[i].Nombre%></td>
                        <td> <%= result[i].Codigo%></td>
                        <td> 
                            <%= result[i].Direccion.Calle%>
                            <%= result[i].Direccion.Numero%>
                      <br>
                      <%= result[i].Direccion.CodigoPostal%>
                      <br>
                      <%= result[i].Direccion.Municipio%>
                          </td>
                        <td> 
                            <a href="/deletecentros/<%= result[i]._id %>" class="btn btn-danger"> Delete</a>
                            <a href="/editcentros/<%= result[i]._id %>" class="btn btn-info"> Edit</a>
                            </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
    </div>
</div>
<style>
        .input-group.md-form.form-sm.form-2 input.amber-border {
          border: 1px solid #ffca28;
          margin: 35px 600px 50px 80px;
        }
        </style>
        <script>
        // Filter table
        
        $(document).ready(function(){
          $("#tableSearch").on("keyup", function() {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function() {
              $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
          });
        });
        </script>

<%- include ('partials/_footer') %>